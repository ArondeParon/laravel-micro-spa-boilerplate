.badge{
    @apply
    inline-flex
    rounded-full
    text-white
    bg-gray-800
    leading-loose
    text-xs
    pr-3
    pl-2;
}
.badge *{
    @apply self-center;
}
.badge-red{
    @apply bg-red-600 border-l-8 border-r-8 border-red-700
}
.badge-green{
    @apply bg-green-600 border-l-8 border-r-8 border-green-700
}
.badge-blue{
    @apply bg-blue-600 border-l-8 border-r-8 border-blue-700
}
.badge-yellow{
    @apply bg-yellow-600 border-l-8 border-r-8 border-yellow-700
}
