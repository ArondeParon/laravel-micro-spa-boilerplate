}
.btn-red[disabled]{
    @apply bg-gray-900 border-red-800
}

.btn-purple{
    @apply text-gray-300 border-l-4 border-purple-600
}
.btn-purple:hover{
    @apply bg-purple-600;
}
.btn-purple[disabled]{
