.btn-yellow{
    @apply text-gray-300 border-l-4 border-yellow-600
}
.btn-yellow:hover{
    @apply bg-yellow-600
}
.btn-yellow[disabled]{
    @apply bg-yellow-900 border-yellow-800
}
